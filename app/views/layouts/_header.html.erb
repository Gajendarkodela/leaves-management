<% c = controller.controller_name%>
    <% a= controller.action_name %>
<nav class="navbar navbar-expand-lg navbar-dark bg-promo  fixed-top p-0" id="mainNav">
  <a class="navbar-brand ml-3" href="/">  
    <%= image_tag 'logo.jpg', style: "height: 40px; width: 130px;"%>
  </a>
  <% if current_user.admin? %>
	  <a href="/users" class="header-icon text-white <%= (c == 'users' && a != 'settings') ? 'active' : ''%>">
	    <i class="fa fa-users text-white" style="font-size: 31px;"></i><br>
	    <small> Users</small>
	  </a>
	   <a href="/users/settings" class="header-icon text-white <%= (a == 'settings') ? 'active' : ''%>">
	  	<i class="fa fa-calendar text-white" style="font-size: 31px;"></i><br>
	    <small> Settings</small>
	  </a>
  <%else%>
  	<a href="/leave_requests" class="header-icon text-white <%= (c == 'leave_requests') ? 'active' : ''%>">
	  	<i class="fa fa-tasks text-white" style="font-size: 31px;"></i><br>
	    <small> Requests</small>
	  </a>
	<% end %>


  <div class="collapse navbar-collapse" id="navbarResponsive">
    
  </div>
  <div class="dropdown">
	  <a href="#" class="header-icon float-right text-white" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			<i class="fa fa-user-circle text-white" style="font-size: 31px;"></i><br>
		  <small> Logout</small>
	  </a>
	  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
	    <%= link_to "Log out", destroy_user_session_path, method: 'delete', class: "dropdown-item mr-3"%>
	  </div>
	</div>
</nav>
