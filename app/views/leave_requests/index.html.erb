
<div class="float-right">
	<%= link_to 'New Leave', new_leave_request_path, class:"btn btn-primary", remote: true%>
</div>
<h2> User Profile </h2>
<div class="card card-body">
	<div class="col-md-6 ">
    <table class="table table-dark">
    	<tr>
    		<td> User Name: </td>
    		<td><%= current_user.name%></td>
    	</tr>
    	<tr>
    		<td> User Email: </td>
    		<td><%= current_user.email%></td>
    	</tr>
    		<tr>
    		<td> Leaves Taken: </td>
    		<td><%= current_user.leaves_taken%></td>
    	</tr>
    	</tr>
    		<tr>
    		<td> Leaves Balance: </td>
    		<td><%= current_user.leaves_balance%></td>
    	</tr>

    </table>
	</div>
	<div class="col-md-6"></div>
</div>
<h2> Leave Requests </h2>
<%= render partial: 'leaves_list',locals: { leaves: @leaves}%>
<div id="leave-div"></div>